TOOL=mariabackup
PREFIX=/usr/local/lib/mysql_backup
PLUGIN=${PLUGIN:-scp}
LOG=3

DATADIR=${DATADIR:-/var/mysql}
HISTORY_FILE="${HISTORY_FILE:=backup_history.txt}"
DATABASE_CONNECT="${DATABASE_CONNECT:- -H 127.0.0.1}"
DATABASE_USER="${DATABASE_USERNAME:-backup}"
DATABASE_PASSWORD="${DATABASE_PASSWORD}"

SFTP_SERVER="${SFTP_SERVER}"
SFTP_ROOT_DIRECTORY="${SFTP_ROOT_DIRECTORY:-mysql-backup}"
SFTP_USER="${SFTP_USER}"
SFTP_PASSWORD="${SFTP_PASSWORD}"
SFTP_KEY="${SFTP_KEY:-/root/.ssh/id_rsa}"
